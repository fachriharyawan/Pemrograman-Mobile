<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:layout_marginTop="16dp"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="My Intent Application"
        android:textSize="30sp"
        android:textStyle="bold"
        android:fontFamily="sans-serif-black"
        android:textColor="@color/colorPrimary"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="20dp"
        />

    <Button
        android:id="@+id/btn_moveActivity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/move"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/vertical_activity"
        />

    <Button
        android:id="@+id/btn_moveActivityWithData"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/move_data"
        android:textSize="20sp"
        android:layout_marginTop="@dimen/vertical_activity"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btn_Call"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/call"
        android:textSize="20sp"
        android:layout_marginTop="@dimen/vertical_activity"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btn_OpenWeb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/open_Igracias"
        android:layout_marginTop="@dimen/vertical_activity"
        android:textSize="20sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btn_IntentEx"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/intent_explicit"
        android:layout_marginTop="@dimen/vertical_activity"
        android:textSize="20sp"
        android:textStyle="bold"/>

</LinearLayout>